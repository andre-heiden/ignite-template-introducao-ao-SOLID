{
  "openapi": "3.0.0",
  "info": {
    "title": "Solid Introduction Documentation",
    "description": "This is an API Solid Introduction",
    "version": "1.0.0",
    "contact": {
      "email": "andre.heiden@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "user name sample",
                  "email": "user@sample.com"
                }
              } 
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "User already exists"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "List all users, user must be admin.",
        "parameters": [{
          "in": "header",
          "name": "user_id",
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "description": "Id of user created.",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "Date"
                      },
                      "updated_at": {
                        "type": "Date"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User not found or User not admin"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user",
        "description": "Get user by ID.",
        "parameters": [{
          "in": "path",
          "name": "user_id",
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "description": "The user Id of user created.",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "Date"
                      },
                      "updated_at": {
                        "type": "Date"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn user admin",
        "description": "Turn user admin by ID.",
        "parameters": [{
          "in": "path",
          "name": "user_id",
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "description": "The user Id of user created.",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "Date"
                      },
                      "updated_at": {
                        "type": "Date"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}